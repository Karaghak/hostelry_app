<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erik.erp_hotel_industry.Database$MainPage"
    android:background="@color/background_yellow"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:id="@+id/button_category"
        android:layout_marginTop="175dp"
        android:background="@color/strong_yellow"
        android:onClick="categoryPage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product"
        android:id="@+id/button_product"
        android:onClick="productsPage"
        android:background="@color/strong_yellow"
        android:backgroundTint="@color/strong_yellow"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supplier"
        android:id="@+id/button_supplier"
        android:onClick="supplierPage"
        android:background="@color/strong_yellow"
        android:layout_alignBaseline="@+id/button_product"
        android:layout_alignBottom="@+id/button_product"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orders"
        android:id="@+id/buttonOrders"
        android:layout_alignTop="@+id/button_category"
        android:layout_alignRight="@+id/button_supplier"
        android:layout_alignEnd="@+id/button_supplier"
        android:onClick="ordersPage"
        android:background="@color/strong_yellow" />

</LinearLayout>
